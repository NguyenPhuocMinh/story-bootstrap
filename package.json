{
  "name": "story-bootstrap-lerna",
  "private": true,
  "author": "Minh Nguyá»…n",
  "scripts": {
    "build": "lerna run build",
    "watch": "lerna run --parallel watch",
    "test": "jest",
    "prepare": "husky install",
    "lint": "eslint --ext .js,.ts,.tsx \"./packages/**/src/**/*.{js,ts,tsx}\" \"./examples/**/src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx \"./packages/**/src/**/*.{js,ts,tsx}\" \"./examples/**/src/**/*.{js,ts,tsx}\"",
    "format": "prettier --config ./.prettierrc --check \"packages/*/src/**/*.{js,json,ts,tsx,md}\" \"examples/*/src/**/*.{js,ts,json,tsx,md}\"",
    "format:fix": "prettier --config ./.prettierrc --write \"packages/*/src/**/*.{js,json,ts,tsx,md}\" \"examples/*/src/**/*.{js,ts,json,tsx,md}\"",
    "run-demo": "cd examples/demo npm start"
  },
  "keywords": [
    "react",
    "lerna"
  ],
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/react": "^17.0.37",
    "@types/react-redux": "^7.1.20",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix \"./packages/**/src/**/*.{js,ts,tsx}\" \"./examples/**/src/**/*.{js,ts,tsx}\"",
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
