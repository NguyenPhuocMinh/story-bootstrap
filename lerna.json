{
  "packages": ["packages/*"],
  "version": "0.1.0",
  "npmClient": "npm",
  "hoist": true,
  "stream": true,
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    }
  },
  "bootstrap": {
    "ignore": "component-*"
  }
}
