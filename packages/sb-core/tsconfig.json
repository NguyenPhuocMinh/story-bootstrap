/*
 * For a detailed explanation regarding each configuration property, visit:
 * https://www.typescriptlang.org/docs/handbook/compiler-options.html
 */

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "composite": true
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.test.js",
    "**/*.test.tsx"
  ],
  "include": ["src"]
}
